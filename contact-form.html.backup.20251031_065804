<script>
  // Captcha state
  let captchaNum1 = 0, captchaNum2 = 0;

  // Generate random captcha
  function generateCaptcha() {
    captchaNum1 = Math.floor(Math.random() * 10) + 1;
    captchaNum2 = Math.floor(Math.random() * 10) + 1;
    document.getElementById('captchaNum1').textContent = captchaNum1;
    document.getElementById('captchaNum2').textContent = captchaNum2;
    document.getElementById('captchaAnswer').value = '';
  }

  // Custom validation messages
  const validationRules = {
    firstName: {
      minLength: { value: 2, message: 'First name must be at least 2 characters' },
      maxLength: { value: 50, message: 'First name must not exceed 50 characters' },
      pattern: { value: /^[a-zA-Z\s]+$/, message: 'First name should contain only letters' }
    },
    lastName: {
      minLength: { value: 2, message: 'Last name must be at least 2 characters' },
      maxLength: { value: 50, message: 'Last name must not exceed 50 characters' },
      pattern: { value: /^[a-zA-Z\s]+$/, message: 'Last name should contain only letters' }
    },
    email: {
      pattern: { value: /^[^\s@]+@[^\s@]+\.[^\s@]+$/, message: 'Please enter a valid email address' }
    },
    mobileNumber: {
      minLength: { value: 10, message: 'Mobile number must be exactly 10 digits' },
      maxLength: { value: 10, message: 'Mobile number must be exactly 10 digits' },
      pattern: { value: /^[6-9]\d{9}$/, message: 'Please enter a valid 10-digit Indian mobile number starting with 6-9' }
    },
    message: {
      minLength: { value: 10, message: 'Message must be at least 10 characters' },
      maxLength: { value: 5000, message: 'Message must not exceed 5000 characters' }
    }
  };

  // Validate individual field
  function validateField(field) {
    const fieldName = field.name;
    const rules = validationRules[fieldName];

    if (!rules) return true;

    const value = field.value.trim();
    const parent = field.parentElement;
    let errorMessage = '';

    // Check for required
    if (!value && field.required) {
      errorMessage = `${field.labels[0]?.textContent.replace('*', '').trim()} is required`;
    } else if (value) {
      // Check minLength
      if (rules.minLength && value.length < rules.minLength.value) {
        errorMessage = rules.minLength.message;
      }
      // Check maxLength
      else if (rules.maxLength && value.length > rules.maxLength.value) {
        errorMessage = rules.maxLength.message;
      }
      // Check pattern
      else if (rules.pattern && !rules.pattern.value.test(value)) {
        errorMessage = rules.pattern.message;
      }
    }

    // Show/hide error
    let errorEl = parent.querySelector('.error-message');
    if (errorMessage) {
      if (!errorEl) {
        errorEl = document.createElement('p');
        errorEl.className = 'error-message';
        parent.appendChild(errorEl);
      }
      errorEl.textContent = errorMessage;
      parent.classList.add('has-error');
      return false;
    } else {
      if (errorEl) errorEl.remove();
      parent.classList.remove('has-error');
      return true;
    }
  }

  // Real-time validation on input
  document.getElementById('contactForm').addEventListener('input', function(e) {
    if (e.target.type !== 'checkbox') {
      validateField(e.target);
    }
  });

  document.getElementById('contactForm').addEventListener('change', function(e) {
    validateField(e.target);
  });

  function handleSubmit(event) {
    event.preventDefault();

    const form = event.target;
    const inputs = form.querySelectorAll('input:not([type="hidden"]), textarea, input[type="checkbox"]');
    let isValid = true;

    // Validate all fields
    inputs.forEach(input => {
      if (input.id !== 'captchaAnswer') {
        if (!validateField(input)) {
          isValid = false;
        }
      }
    });

    // Validate captcha
    const captchaInput = document.getElementById('captchaAnswer');
    const expectedSum = captchaNum1 + captchaNum2;
    const captchaParent = captchaInput.closest('.form-group');

    if (!captchaInput.value || parseInt(captchaInput.value) !== expectedSum) {
      isValid = false;
      let errorEl = captchaParent.querySelector('.error-message');
      if (!errorEl) {
        errorEl = document.createElement('p');
        errorEl.className = 'error-message';
        captchaParent.appendChild(errorEl);
      }
      errorEl.textContent = 'Incorrect captcha answer. Please try again.';
      captchaParent.classList.add('has-error');
      generateCaptcha();
    } else {
      let errorEl = captchaParent.querySelector('.error-message');
      if (errorEl) errorEl.remove();
      captchaParent.classList.remove('has-error');
    }

    if (!isValid) {
      return false;
    }

    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());

    // Replace this with your actual form submission logic
    console.log('Form submitted:', data);
    alert('Thank you! Your message has been sent.');

    form.reset();
    form.querySelectorAll('.has-error').forEach(el => el.classList.remove('has-error'));
    generateCaptcha();
  }
</script>

