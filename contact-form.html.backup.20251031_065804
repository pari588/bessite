    user-select: none;
  }

  .captcha-question span {
    color: #0b7ad1;
    font-weight: 700;
    font-size: 20px;
  }
</style>

<script>
  // Initialize captcha on page load
  document.addEventListener('DOMContentLoaded', function() {
    generateCaptcha();
  });
</script>