<script>
$(document).ready(function() {
    // Show customer care popup automatically when page loads (only once per session)
    if (!sessionStorage.getItem('pumpPopupShown')) {
        setTimeout(function() {
            $('#customerCarePopup').mxpopup({modal: true, close: 'close'});
            sessionStorage.setItem('pumpPopupShown', 'true');
        }, 500); // Small delay for smooth page load
    }

    // Close popup when clicking outside the body
    $('#customerCarePopup').on('click', function(e) {
        if ($(e.target).is('#customerCarePopup')) {
            $(this).hidemxdialog();
        }
    });
});
</script>